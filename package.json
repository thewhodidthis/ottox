{
  "name": "@thewhodidthis/ottox",
  "version": "0.0.1",
  "description": "Calculate elementary celullar automata in the one dimension",
  "keywords": [
    "automata",
    "canvas",
    "cellular"
  ],
  "main": "index.js",
  "module": "index.es",
  "homepage": "https://github.com/thewhodidthis/ottox#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thewhodidthis/ottox.git"
  },
  "bugs": {
    "url": "https://github.com/thewhodidthis/ottox/issues"
  },
  "directories": {
    "example": "example"
  },
  "config": {
    "remote": "thewhodidthis@zazie:www/example/ottox/"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clear": "npm run clear:dist && npm run clear:logs",
    "clear:dist": "rm -rf dist/",
    "clear:logs": "rm -f *.log",
    "lint": "eslint index.es; exit 0",
    "start": "npm run clear && npm run build",
    "preexample": "npm start",
    "example": "npm run example:link && npm run example:serve",
    "example:link": "ln -siv \"$(pwd)/dist/ottox.min.js\" example/ottox.js",
    "example:push": "rsync -avruzLPC --exclude=.DS_Store ./example/ $npm_package_config_remote",
    "example:serve": "php -S localhost:8000 -t example/",
    "prebuild": "mkdir -p dist/",
    "build": "rollup -c",
    "build:min": "uglifyjs dist/ottox.js -cm > dist/ottox.min.js",
    "postbuild": "npm run build:min",
    "preversion": "npm start"
  },
  "engines": {
    "node": ">=4.2.4",
    "npm": ">=3.5.3"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "latest",
    "babel-preset-es2015": "latest",
    "eslint": "latest",
    "eslint-plugin-import": "latest",
    "eslint-config-airbnb-base": "latest",
    "rollup": "latest",
    "rollup-plugin-babel": "latest",
    "uglify-js": "latest"
  },
  "author": "sChzs BkgNns <sotirios.bakagiannis@gmail.com> (https://www.thewhodidthis.com)",
  "license": "Unlicense"
}
